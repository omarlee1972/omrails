<div class="box">
 		<%= link_to (image_tag pin.image(:medium)), pin %>
 		<p class="description">
			 <%= pin.description %>
 	</p>
 	<p>
 	Posted by <strong><%= link_to pin.user.name, pin.user %></strong>
 	</p>
 <p>
 <% if current_user == pin.user %>
 <%= link_to 'Edit', edit_pin_path(pin) %>
 <%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Really? Are you sure?' } %>
 </p>
    <% end %>
    </div>